<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    app:cardCornerRadius="@dimen/card_view_corner_radius"
    app:cardElevation="@dimen/card_view_elevation">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/fav_btn"
        android:layout_width="@dimen/toolbar_icon_size"
        android:layout_height="@dimen/toolbar_icon_size"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_launcher_background"
        android:layout_marginRight="@dimen/smallest_margin"
        android:layout_marginLeft="@dimen/small_margin"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/fav_btn"
        android:orientation="vertical"
        android:layout_margin="@dimen/small_margin">

        <TextView
            android:id="@+id/english_word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/top_text_size"
            android:textColor="@android:color/holo_blue_dark"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/bangla_word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/bottom_text_size"
            android:textColor="@android:color/black"/>

    </LinearLayout>


</RelativeLayout>
</android.support.v7.widget.CardView>